<html>
    <head>
        <title>Edit {{ course.getName }}</title>
    </head>
    <body>
        <h1>Edit {{ course.getName }}</h1>

        <form action="/courses/{{ course.getId }}" method="post">
            <input name="_method" type="hidden" value="patch">
            <label for="name">Enter new Name:</label>
            <input name="name" type="text" value="{{ course.getName }}">
            <label for="course_num">Enter new Enrollment Date:</label>
            <input name="course_num" type="text" value="{{ course.getCourseNum }}">

            <button type="submit">Submit</button>
        </form>

        <form action="/courses/{{ course.getId }}" method="post">
            <input type="hidden" name="_method" value="delete">
            <button type="submit">Delete Course</button>
        </form>

        <form action="/courses/{{ course.getId }}">
            <button type="submit">Back</button>
        </form>
    </body>
</html>
