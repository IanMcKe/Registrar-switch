<html>
    <head>
        <title>{{ course.getName }}</title>
    </head>
    <body>
        <h1>{{ course.getName }}</h1>
        <h5>Course Number: {{ course.getCourseNum }}</h5>
        {% if students is not empty %}
            <h3>Here the students enrolled in this course:</h3>
            <ul>
                {% for student in students %}
                    <h6>{{ student.getName }}</h6>
                {% endfor %}
            </ul>
        {% else %}
            <h3>No students have enrolled in this course</h3>
        {% endif %}

        <form action="/add_students" method="post">
            <input type="hidden" name="course_id" value="{{ course.getId }}">
            <label for="student_id">Select a student</label>
            <select name="student_id" type="text">
                {% for student in all_students %}
                    <option value="{{ student.getId }}">{{ student.getName }}</option>
                {% endfor %}
            </select>
            <button type="submit">Add student</button>
        </form>

        <form action="/courses/{{ course.getId }}/edit">
            <button type="submit">Edit Course</button>
        </form>

        <form action="/courses">
            <button type="submit">Back</button>
        </form>

    </body>
</html>
